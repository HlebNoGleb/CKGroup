	<script src="~/sweetalert.js"></script>
	<script src="~/main.js"></script>
	<script type="text/javascript">
		(function(){
			emailjs.init({
				publicKey: "ZgX8weBUucbSk3_wo",
			});
		})();
	</script>
	<script>

		window.onload = function() {
		document.querySelectorAll(".contact-form").forEach(e => {
			e.addEventListener('submit', function(event) {
				event.preventDefault();
				emailjs.sendForm("service_7u8plnz","template_ad2g7bc", this)
					.then(function() {
						Swal.fire({
							title: 'Сообщение отправлено',
							background: "red",
							color: "blue",
							confirmButtonColor: "green"
						})
					}, function(error) {
						Swal.fire({
							title: 'Произошла ошибка. Попробуйте позже',
							background: "red",
							color: "blue",
							confirmButtonColor: "green"
						})
					});
		})
			document.getElementById('product-form').addEventListener('submit', function(event) {
				event.preventDefault();
				emailjs.sendForm("service_7u8plnz","template_u3hra2l", this)
					.then(function() {
						Swal.fire({
							title: 'Сообщение отправлено',
							background: "var(--background)",
							color: "var(--main-color)",
							confirmButtonColor: "var(--contrast-color)"
						})
					}, function(error) {
						Swal.fire({
							title: 'Произошла ошибка. Попробуйте позже',
							background: "var(--background)",
							color: "var(--main-color)",
							confirmButtonColor: "var(--contrast-color)"
